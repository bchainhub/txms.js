{
	"compilerOptions": {
		"target": "ES2017",
		"module": "ESNext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"declaration": true,
		"rootDir": "./src",
		"types": [
			"node"
		],
		"allowJs": false,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"**/*.spec.ts",
		"node_modules/**/*"
	]
}
